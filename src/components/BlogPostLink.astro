---
const { href, imgSrc, imgAlt, title, description } = Astro.props;
---
<a
  href={href}
  class="block p-0.5 rounded-sm transform hover:-translate-y-1 hover:scale-105 transition-all duration-300 cyber-border relative group"
>
  <div class="relative bg-dark-card dark:bg-dark-card light:bg-light-card rounded-sm overflow-hidden p-4">
    <div class="absolute top-0 left-0 w-full h-full bg-cyber-grid dark:bg-cyber-grid light:bg-cyber-grid opacity-10 pointer-events-none"></div>
    
    <!-- Image Container -->
    <div class="relative h-48 bg-black dark:bg-black light:bg-black rounded-sm overflow-hidden mb-4">
      <img
        src={imgSrc}
        alt={imgAlt}
        class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-110"
      />
      <div class="absolute inset-0 bg-gradient-to-t from-black to-transparent"></div>
      
      <!-- Top text line decoration -->
      <div class="absolute top-2 left-2 right-2 flex items-center">
        <div class="h-[1px] w-4 bg-cyber-blue dark:bg-cyber-blue light:bg-cyber-pink"></div>
        <div class="h-[1px] flex-grow mx-2 bg-gradient-to-r from-cyber-blue dark:from-cyber-blue light:from-cyber-pink to-transparent"></div>
        <div class="text-xs font-cyber-mono text-cyber-blue dark:text-cyber-blue light:text-cyber-pink whitespace-nowrap">KANARI//DATA</div>
      </div>
      
      <!-- Bottom title decoration -->
      <div class="absolute bottom-0 left-0 p-4 w-full">
        <div class="flex items-center mb-1">
          <div class="h-[1px] w-4 bg-cyber-blue dark:bg-cyber-blue light:bg-cyber-pink"></div>
          <div class="h-[1px] flex-grow mx-2 bg-gradient-to-r from-cyber-blue dark:from-cyber-blue light:from-cyber-pink to-transparent"></div>
        </div>
        <p class="text-lg font-cyber font-semibold text-cyber-blue dark:text-cyber-blue light:text-cyber-pink">{title}</p>
      </div>
    </div>
    
    <!-- Description -->
    <div class="relative">
      <p class="text-gray-300 dark:text-gray-300 light:text-gray-700 font-cyber-mono text-sm">{description}</p>
      
      <!-- Read more indicator -->
      <div class="flex items-center mt-4 text-cyber-blue dark:text-cyber-blue light:text-cyber-pink text-xs font-cyber-mono">
        <span class="mr-2">>>READ_MORE</span>
        <div class="h-[1px] flex-grow bg-gradient-to-r from-cyber-blue/50 dark:from-cyber-blue/50 light:from-cyber-pink/50 to-transparent"></div>
      </div>
    </div>
    
    <!-- Scan line animation -->
    <div class="absolute inset-0 pointer-events-none overflow-hidden opacity-0 group-hover:opacity-100 transition-opacity">
      <div class="absolute left-0 w-full h-6 bg-gradient-to-r from-transparent via-cyber-blue/10 dark:via-cyber-blue/10 light:via-cyber-pink/10 to-transparent animate-scan-line"></div>
    </div>
    
    <!-- Corner decorations - top left -->
    <div class="absolute top-0 left-0 w-3 h-3 border-t border-l border-cyber-blue dark:border-cyber-blue light:border-cyber-pink"></div>
    
    <!-- Corner decorations - top right -->
    <div class="absolute top-0 right-0 w-3 h-3 border-t border-r border-cyber-blue dark:border-cyber-blue light:border-cyber-pink"></div>
    
    <!-- Corner decorations - bottom left -->
    <div class="absolute bottom-0 left-0 w-3 h-3 border-b border-l border-cyber-blue dark:border-cyber-blue light:border-cyber-pink"></div>
    
    <!-- Corner decorations - bottom right -->
    <div class="absolute bottom-0 right-0 w-3 h-3 border-b border-r border-cyber-blue dark:border-cyber-blue light:border-cyber-pink"></div>
  </div>
</a>