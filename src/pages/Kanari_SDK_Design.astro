---
// src/pages/blog01.astro
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Kanari SDK Design">
  <div class="flex flex-col min-h-screen">
    <Navbar />
  <div class="h-20"></div>
    <main class="flex-grow p-4 sm:p-6 lg:p-8 bg-gray-50 dark:bg-gray-900">
      <article class="max-w-4xl mx-auto bg-gray-900 dark:bg-gray-800 p-6 rounded-lg shadow-md">
        <h1 class="text-3xl font-bold mb-4 text-white dark:text-gray-100">Kanari SDK Design</h1>
        <img
          src="https://raw.githubusercontent.com/kanari-network/about/main/kari1.png"
          alt="EP1 Image"
          class="w-full h-auto rounded-lg mb-4"
        />
        <p class="text-lg text-white dark:text-gray-300 leading-relaxed">
          Explore the design principles and architecture of the Kanari SDK in
          this detailed blog post.
        </p>
      </article>
    </main>
  
    <Footer />
  </div>
</Layout>